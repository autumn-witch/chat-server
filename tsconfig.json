{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
		"rootDir": "./src",
    "outDir": "./dist",
		"strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
		"noImplicitOverride": true,
    "noImplicitReturns": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts", "node_modules"]
}